<style>
    /*
    Adapted from polarnotion.github.io/starwarsintro by Polar Notion [http://polarnotion.com/]
    */

    body,
    html {
        height: 100%;
        min-height: 100vh;
        margin: 0;
    }

    .crawl--wrapper {
        width: 100%;
        height: 100%;
        font-weight: 700;
        color: #EBD71C;
        background-color: #000;
        overflow: hidden;
        position: relative;
    }

    .crawl--wrapper .crawl--content {
        margin-left: auto;
        margin-right: auto;
        position: absolute;
        z-index: 3;
        width: 98%;
        height: 50em;
        bottom: 0;
        font-size: 80px;
        font-weight: bold;
        text-align: justify;
        overflow: hidden;
        transform-origin: 50% 100%;
        transform: perspective(350px) rotateX(25deg);
    }

    .crawl--wrapper .crawl--content:after {
        position: absolute;
        content: ' ';
        top: 0;
        bottom: 60%;
        background-image: linear-gradient(top, rgba(0,0,0,1) 0%, transparent 100%);
        pointer-events: none;
    }

    .crawl--wrapper .crawl--text {
        position: absolute;
        top: 100%;
        animation: scroll 120s linear 4s forwards;
    }

    .crawl--wrapper .crawl--text > .crawl--title {
        text-align: center;
    }

    .crawl--wrapper .crawl--logo {
        position: absolute;
        width: 2.6em;
        left: 50%;
        top: 20vh;
        font-size: 10em;
        text-align: center;
        margin-left: -1.3em;
        line-height: 0.8em;
        letter-spacing: -0.05em;
        text-shadow: -2px -2px 0 #EBD71C, 2px -2px 0 #EBD71C, -2px 2px 0 #EBD71C, 2px 2px 0 #EBD71C;
        opacity: 0;
        z-index: 1;
        animation: logo 5s ease-out 2.5s;
    }

    .crawl--wrapper .crawl--logo > img {
        max-width: 100%;
    }

    @keyframes logo {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            opacity: 1;
        }
        100% {
            transform: scale(0.1);
            opacity: 0;
        }
    }

    @keyframes scroll {
        0% {
            top: 100%;
        }
        100% {
            top: -170%;
        }
    }

    @media screen and (max-width: 720px) {
        .crawl--wrapper .crawl--content {
            font-size: 35px;
        }
        .crawl--wrapper .crawl--text {
            position: absolute;
            top: 100%;
            animation: scroll 100s linear 4s forwards;
        }
    }
</style>

