<script type="module">
  import * as THREE from 'https://cdn.skypack.dev/three@0.136.0';

  // Surprise variables that will help us later
  let renderer,
    model,
    controls;

  const canvas = document.querySelector('.three')

  // Initializing the scene
  const scene = new THREE.Scene();

  // Adding a Point Light to the scene
  const light1 = new THREE.PointLight(0xffffff, 1);

  light1
    .position
    .set(50, 50, 50);

  scene.add(light1)

  // The group will contain the grid, the Chippy model, and the octahedron
  const group = new THREE.Group();

  // Setting up the camera
  const camera = new THREE.PerspectiveCamera(75, window.innerWidths / window.innerHeight, 0.1, 100);

  camera.position.z = 2;
  camera.position.y = -0.1;
  camera.position.x = 0;

  camera.aspect = window.innerWidth / window.innerHeight;
  camera.updateProjectionMatrix();

  // Loading in the GLTF Chippy model
  const GLTFLoader = (await import ("https://cdn.skypack.dev/three@0.136.0/examples/jsm/loaders/GLTFLoader.js")).GLTFLoader;

  const loader = new GLTFLoader();

  // Loading and adding the Z2 model to the scene
  loader.load("/gltfs/Z2.glb", (gltf) => {
    model = gltf.scene;

    model.traverse((node) => {
      if (!node.isMesh) 
        return
      node.material.wireframe = true
      node
        .material
        .color
        .setHex(0x262626)
    });

    const boundingBox = new THREE
      .Box3()
      .setFromObject(model);
    const boundingBoxSize = boundingBox
      .max
      .sub(boundingBox.min);
    const height = boundingBoxSize.y;
    const depth = boundingBoxSize.z;

    model.position.y = -height / 2;
    model.position.z += depth / 4;

    model.rotation.z += 0.3

    // Giving the model a referenceable name
    model.name = "Z2";

    // Finally adding the Z2 model to the scene
    group.add(model);
    scene.add(group);
  });

  // Initializing the renderer
  renderer = new THREE.WebGLRenderer({antialias: true, canvas: canvas, alpha: true});

  renderer.localClippingEnabled = true;
  renderer.setSize(window.innerWidth, window.innerHeight);
  renderer.outputEncoding = THREE.sRGBEncoding;

  // Runs every frame
  const animate = () => {
    requestAnimationFrame(animate);

    group.rotation.y += 0.001;

    if (renderer) {
      renderer.render(scene, camera);
    }
  };

  const resize = () => {
    renderer.setSize(window.innerWidth, window.innerHeight);
    camera.aspect = window.innerWidth / window.innerHeight;
    camera.updateProjectionMatrix();
  };

  // Initially resize
  resize();

  // Begin the render loop
  animate();

  window.addEventListener("resize", resize);
</script>

